<app:PrismApplication xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:local="clr-namespace:PrismMauiDemo"
             x:Class="PrismMauiDemo.App"
             xmlns:app="clr-namespace:Prism;assembly=Prism.Maui"
             windows:Application.ImageDirectory="Assets">
  <app:PrismApplication.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
        <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </app:PrismApplication.Resources>
</app:PrismApplication>
